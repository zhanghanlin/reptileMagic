<?xml version="1.0" encoding="UTF-8"?>
<!-- Logger Level TRACE < DEBUG < INFO < WARN < ERROR -->
<!-- The configuration file is modified within 1 minutes after the re loading -->
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!-- Console Info -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Format %d - date %thread - threadName %-5levelLevel - from the tree
                shows the width of 5 characters %msg - log info %n - newlines -->
            <pattern>
                %d %yellow(%-1level) --- [%thread] %cyan(%logger[%file:%line]) : %msg %n
                <!--%d %yellow(%-1level) -&#45;&#45; [%thread] %cyan(%caller{1}) : %msg %n-->
            </pattern>
        </encoder>
    </appender>
    <logger name="us.codecraft.webmagic">
        <level value="WARN"/>
    </logger>
    <logger name="us.codecraft.webmagic.Spider">
        <level value="INFO"/>
    </logger>
    <logger name="com.demo.java">
        <level value="INFO"/>
    </logger>
    <logger name="org.apache.http.client.protocol.ResponseProcessCookies">
        <level value="ERROR"/>
    </logger>
    <!-- Console -->
    <root level="INFO">
        <appender-ref ref="Console"/>
    </root>
</configuration>